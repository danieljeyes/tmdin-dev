    <section id="cookdashboard" ng-app="menuStore" ng-controller="cookController">
      <div class="container" >
            <div class="row">
            	<div class="col-sm-3">
					<div class="panel panel-default">
            			<div class="panel-heading">
            				<h4> Dashboard Navigation </h4>
            			</div>
            			<div class="panel-body">
            				  <ul class="list-group">
            				  	<li class="list-group-item"> Dashboard Home</li>
            				  	<li class="list-group-item"> Your Menus</li>
            				  	<li class="list-group-item"> <a href ng-click="editMenu()">Create Menu</a></li>
            				  	<li class="list-group-item"> View your orders</li>
